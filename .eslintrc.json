{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "quotes": ["error", "single"],
    "react/jsx-indent": ["error", 2],
    "react/jsx-indent-props": ["error", "first"],
    "react/no-children-prop": 0,
    "semi": ["error", "always"]
  },
  "settings": {
    "react": {
      "version": "16"
    }
  }
}
