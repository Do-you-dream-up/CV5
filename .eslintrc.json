{
  "env": {
    "browser": true,
    "es6": true,
    "jest/globals": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:react/recommended",
    "plugin:jest/recommended"
  ],
  "globals": {
    "__dirname": false,
    "module": false,
    "process": false,
    "require": false
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["import", "react", "react-hooks", "jest"],
  "rules": {
    "keyword-spacing": "warn",
    "no-empty": ["warn", { "allowEmptyCatch": true }],
    "no-unused-vars": [0, { "ignoreRestSiblings": true }],
    "react/no-children-prop": 0,
    "react-hooks/exhaustive-deps": "warn",
    "react-hooks/rules-of-hooks": "warn"
  },
  "settings": {
    "import/core-modules": ["rsg-components/Styled"],
    "react": {
      "version": "17"
    }
  }
}
